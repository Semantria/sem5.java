<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%d{yyyy-MM-dd HH:mm:ss}) %highlight(%-5level) %cyan(%logger{36}):%L %highlight(- %msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="com.lexalytics.semantria" level="trace" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
